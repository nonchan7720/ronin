{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "packages": {
    ".": {
      "release-type": "go",
      "package-name": "ronin",
      "include-v-in-tag": true,
      "include-component-in-tag": false,
      "draft": false,
      "prerelease": false,
      "bump-patch-for-minor-pre-major": true
    }
  },
  "changelog-sections": [
    {
      "type": "feat",
      "section": "Features",
      "hidden": false
    },
    {
      "type": "fix",
      "section": "Bug Fixes",
      "hidden": false
    },
    {
      "type": "chore",
      "section": "Miscellaneous",
      "hidden": false
    },
    {
      "type": "docs",
      "section": "Documentation",
      "hidden": false
    },
    {
      "type": "perf",
      "section": "Performance Improvements",
      "hidden": false
    },
    {
      "type": "refactor",
      "section": "Code Refactoring",
      "hidden": false
    },
    {
      "type": "revert",
      "section": "revert",
      "hidden": false
    }
  ],
  "pull-request-title-pattern": "chore${scope}: release ${version} ⚠️ Production Release ⚠️",
  "pull-request-header": ":robot: I have created a release *beep* *boop*"
}
